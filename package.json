{
  "name": "cross-web-components",
  "version": "1.0.2",
  "description": "cross-web-components",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "unpkg": "dist/index.umd.js",
  "types": "dist/index.d.ts",
  "sideEffects": false,
  "scripts": {
    "start": "microbundle watch",
    "demo": "parcel serve ./demo/index.html",
    "build": "microbundle",
    "test": "jest --config=jest.json",
    "lint": "eslint . --ext .ts --quiet",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "prettier:write": "prettier --write *"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/imenesesl/cross-web-components.git"
  },
  "keywords": [
  "nextjs", 
  "react", 
  "rxjs", 
  "microfrontend", 
  "micro-frontend", 
  "micro frontend", 
  "microfrontend platform",
  "messaging",
  "communication",
  "cross-origin",
  "embedding",
  "iframe",
  "web component",
  "webcomponent",
  "web-component",
  "javascript",
  "typescript"
  ],
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/imenesesl/cross-web-components/issues"
  },
  "homepage": "https://github.com/imenesesl/cross-web-components#readme",
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/react": "^17.0.11",
    "@types/react-dom": "^17.0.8",
    "@typescript-eslint/eslint-plugin": "^4.15.0",
    "@typescript-eslint/parser": "^4.15.0",
    "eslint": "^7.19.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-simple-import-sort": "^7.0.0",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "microbundle": "^0.13.3",
    "parcel": "^2.0.0-beta.2",
    "prettier": "^2.2.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "rxjs": "^7.1.0",
    "ts-jest": "^26.5.1",
    "typescript": "^4.3.4"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "./src/**/*.{js,ts,json,md,yml}": [
      "npm run test",
      "npm run prettier:write",
      "npm run lint:fix",
      "git add"
    ]
  },
  "dependencies": {}
}
